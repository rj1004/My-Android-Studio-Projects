<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:text="Help"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="10dp"
                android:text="How To Download Instagram Post..?"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="10dp"
                android:text="Just Visit Instagram and Copy the link of a post which you want to download. After that open Insta Post Saver app and paste the link in Edit box and press Search button.You can find post on the screen.\n\nBy tapping download Button post will be download and saved to... internal storage/Insta post saver/ ...folder.\n\nThen You Can access it.\n\nFor Downloading And Storing purpose You have to allow the permission of internet and Storage.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="--By Rahul's Company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>



